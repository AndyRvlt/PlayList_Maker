<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">"@color/YP_black"</item>
        <item name="android:textSize">22sp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_marginVertical">2dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textFontWeight">500</item>

    </style>

    <style name="TextSettings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingHorizontal">@dimen/Settings_text_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/Settings_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/Settings_text_padding_bottom</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="nightDay">
        <item name="background">@color/YP_Blue</item>
    </style>

    <style name="ButtonArrowBack" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="icon">@drawable/arrow_back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TopText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingTop">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>
