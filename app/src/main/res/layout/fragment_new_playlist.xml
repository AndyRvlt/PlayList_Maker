<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediateca.ui.NewPlayListFragment">


    <Button
        android:id="@+id/arrowBack"
        style="@style/ButtonArrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_new_playlist"
        style="@style/TopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новый плейлист"
        app:layout_constraintStart_toEndOf="@+id/arrowBack"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/add_photo_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/photo_selection"
        android:padding="60dp"
        android:src="@drawable/add_photo_icon"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_new_playlist" />

    <EditText
        android:id="@+id/name_new_playlist_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_playlist_description_add"
        android:hint="Название*"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/add_photo_image"
        tools:layout_editor_absoluteX="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/new_playlist_description_add"
        android:hint="Описание"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_new_playlist_edittext"
        tools:layout_editor_absoluteX="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>