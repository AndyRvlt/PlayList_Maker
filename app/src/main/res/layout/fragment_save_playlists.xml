<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mediateca.ui.SavePlaylistsFragment">

    <Button
        android:id="@+id/create_new_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Day_night_black_white_color"
        android:fontFamily="@font/ys_display_medium"
        android:letterSpacing="0"
        android:text="@string/button_text_playlist_fragment"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:cornerRadius="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/search_error" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="@string/text_new_playlist_fragment"
        android:textColor="@color/Day_night_black_white_color"
        android:textSize="19sp" />

</FrameLayout>